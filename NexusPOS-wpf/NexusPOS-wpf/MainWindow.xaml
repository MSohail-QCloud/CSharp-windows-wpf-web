<Window x:Class="NexusPOS_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NexusPOS_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FFE2E2E2">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Shareware POS" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"></Label>
        <TextBox Grid.Row="1" Text="... Looking for Server" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="15,5,15,5"></TextBox>
        <TextBox Grid.Row="2" Text="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="15,5,15,5"></TextBox>
        <TextBox Grid.Row="3" Text="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="15,5,15,5"></TextBox>
        <Button Grid.Row="4" Margin="15,15,400,15" Name="btnLogin" Content=" Login"></Button>
    </Grid>
</Window>
