            <TabItem Header="suppliers">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="1" Background="#FFF0F0F0">
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0"  FontSize="18" FontWeight="Bold"  Foreground="#FF1163B7"  Content="Add" Name="MenuAd" Click="MenuAdd_Click" Background="{x:Null}" BorderBrush="{x:Null}"></Button>
                                <Button Grid.Column="1"  FontSize="18" FontWeight="Bold"  Foreground="#FF1163B7" Content="Edit" Name="MenuEdi" Click="MenuEdit_Click" Background="{x:Null}" BorderBrush="{x:Null}"></Button>
                                <Button Grid.Column="2"  FontSize="18" FontWeight="Bold"  Foreground="#FF1163B7" Content="Delete" Name="MenuDelet" Click="MenuDelete_Click" Background="{x:Null}" BorderBrush="{x:Null}"></Button>
                                <Button Grid.Column="3"  FontSize="18" FontWeight="Bold"  Foreground="#FF1163B7" Content="Stock" Name="MenuStoc" Click="MenuStock_Click" BorderBrush="{x:Null}" Background="{x:Null}"></Button>
                                <Button Grid.Column="4"  FontSize="18" FontWeight="Bold"  Foreground="#FF1163B7"  Content="Label" Name="MenuLabe" Click="MenuLabel_Click" BorderBrush="{x:Null}" Background="{x:Null}"></Button>
                                <!--<Button Grid.Column="5"  FontSize="18" FontWeight="Bold"  Foreground="#FF1163B7"  Content="Add Expiration Date" Name="MenuExpiry" Click="MenuExpiry_Click" Background="{x:Null}" BorderBrush="{x:Null}"></Button>-->
                                <Button Grid.Column="5"  FontSize="18" FontWeight="Bold"  Foreground="#FF1163B7"  Content="Active " Name="MenuActie" Click="MenuActive_Click" BorderBrush="{x:Null}" Background="{x:Null}"></Button>
                                <Button Grid.Column="6"  FontSize="18" FontWeight="Bold"  Foreground="#FF1163B7"  Content="Disable " Name="MenuDisableProduc" Click="MenuDisableProduct_Click" BorderBrush="{x:Null}" Background="{x:Null}"></Button>
                                <Button Grid.Column="7"  FontSize="18" FontWeight="Bold"  Foreground="#FF1163B7"  Content="Show All" Name="MenushowAllProduc" Click="MenushowAllProduct_Click" BorderBrush="{x:Null}" Background="{x:Null}"></Button>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1" Margin="1">
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"></RowDefinition>
                                    <RowDefinition Height="5"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <WrapPanel Grid.Row="0">
                                    <RadioButton Name="RadioBtnSupplier" GroupName="Supplier" Content="Supplier"></RadioButton>
                                    <RadioButton Name="RadioBtnCarrier" GroupName="Supplier" Content="Carrier"></RadioButton>
                                    <RadioButton Name="RadioBtnTransporation" GroupName="Supplier" Content="Transporation"></RadioButton>
                                </WrapPanel>
                                <Grid Grid.Row="1" Background="Gray">

                                </Grid>
