            <TabItem Header="Expiration Date Control">

            </TabItem>
            <TabItem Header="Inventry">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="1">
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Margin="0.5" Content="New"  Name="menuNewInventory" Click="menuNewInventory_Click"></Button>
                                <Button Grid.Column="1" Margin="0.5" Content="Edit" Name="MenuEditInventory" Click="MenuEditInventory_Click"></Button>
                                <Button Grid.Column="2" Margin="0.5" Content="Delete" Name="MenuDeleteInventory" Click="MenuDeleteInventory_Click"></Button>
                                <Button Grid.Column="3" Margin="0.5" Content="Update Stock" Name="MenuStockInventory" Click="MenuStockInventory_Click"></Button>
                                <Button Grid.Column="4" Margin="0.5" Content="Save" Name="menuSaveInventory" Click="menuSaveInventory_Click"></Button>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="1" Margin="1">
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"></RowDefinition>
                                    <RowDefinition Height="5"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="1" Background="Gray">

                                </Grid>
                                <Grid Grid.Row="2">
                                    <DataGrid></DataGrid>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

        </TabControl>

    </Grid>
</Page>
